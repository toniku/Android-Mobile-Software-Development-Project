<?xml version="1.0" encoding="utf-8"?>


<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimaryDarkTransparent">



<LinearLayout
    android:layout_width=""
    android:layout_height=""></LinearLayout>
    <android.support.v7.widget.CardView

        android:id="@+id/view2"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:elevation="12dp"
        app:cardCornerRadius="75dp"
        android:layout_marginHorizontal="@android:dimen/notification_large_icon_width"
        android:layout_gravity="center_vertical">


        <ImageView

            android:id="@+id/playerDefaultImage"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:src="@drawable/playerdefaultimage"
            android:clickable="true" />

        <ImageView

            android:id="@+id/playerDefaultImage2"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/playerdefaultimage"
            android:clickable="true" />

    </android.support.v7.widget.CardView>

</android.widget.LinearLayout>

