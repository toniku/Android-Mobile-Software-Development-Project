<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_playercard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/default_background">

    <LinearLayout
        android:id="@+id/info3Linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="3dp"
        android:gravity="bottom"
        android:weightSum="100"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.v7.widget.CardView
            android:id="@+id/view2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginEnd="8dp"
            android:elevation="12dp"
            app:cardBackgroundColor="@color/colorPrimaryDarkTransparent40"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/playerDefaultImage"
                android:layout_width="113dp"
                android:layout_height="113dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:background="@drawable/playerdefaultimagecropped"
                android:importantForAccessibility="no"
                android:scaleType="centerCrop"
                android:src="@drawable/circle_shape_playercard" />

            <TextView
                android:id="@+id/playerNameTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom|center"
                android:paddingBottom="2dp"
                android:text="@string/first_and_lastname"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColor="@color/colorWhite"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="visible" />

        </android.support.v7.widget.CardView>


        <LinearLayout
            android:id="@+id/info2LinearLayout"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_weight="0"
            android:gravity="bottom"
            android:orientation="vertical"
            tools:layout_marginLeft="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDarkTransparent40"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="Syntymäaika:"
                        android:textColor="@color/colorWhite" />

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="Pituus:"
                        android:textColor="@color/colorWhite" />

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="Paino:"
                        android:textColor="@color/colorWhite" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="12dp">

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="30.6.2006"
                        android:paddingTop="2dp"
                        android:textColor="@color/colorWhite" />

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="165.2 cm"
                        android:textColor="@color/colorWhite" />

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="50 kg"
                        android:paddingBottom="2dp"
                        android:textColor="@color/colorWhite" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@color/colorPrimaryDarkTransparent40"
                android:gravity="bottom|center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/contact_info"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:layout_conversion_absoluteHeight="22dp"
                    tools:layout_conversion_absoluteWidth="112dp"
                    tools:layout_editor_absoluteX="229dp"
                    tools:layout_editor_absoluteY="113dp" />

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Kylänraitti 5"
                    android:textColor="@color/colorWhite"
                    android:textSize="14sp"
                    tools:layout_conversion_absoluteHeight="20dp"
                    tools:layout_conversion_absoluteWidth="89dp"
                    tools:layout_editor_absoluteX="240dp"
                    tools:layout_editor_absoluteY="136dp" />

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="378 800 Helsinki"
                    android:textColor="@color/colorWhite"
                    android:textSize="14sp"
                    tools:layout_conversion_absoluteHeight="20dp"
                    tools:layout_conversion_absoluteWidth="122dp"
                    tools:layout_editor_absoluteX="224dp"
                    tools:layout_editor_absoluteY="155dp" />

                <TextView
                    android:id="@+id/playerPhoneNumberTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom|center"
                    android:text="040 9997 755"
                    android:textColor="@color/colorWhite"
                    android:textSize="14sp"
                    tools:layout_conversion_absoluteHeight="20dp"
                    tools:layout_conversion_absoluteWidth="91dp"
                    tools:layout_editor_absoluteX="240dp"
                    tools:layout_editor_absoluteY="175dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/seasonTextView"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_column="1"
        android:layout_marginStart="3dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="3dp"
        android:background="@color/colorPrimaryDarkTransparent40"
        android:paddingTop="2dp"
        android:text="@string/season_2018_2019"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/info3Linearlayout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        android:background="@color/colorPrimaryDarkTransparent40"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seasonTextView"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_marginTop="8dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="33"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/playerGoalsTextView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="14dp"
                        android:background="@color/colorPrimaryDarkTransparent"
                        android:paddingTop="@dimen/default_gap"
                        android:text="@string/playerCard_goals"
                        android:textAlignment="center"
                        android:textColor="@color/colorWhite"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/goalsTextView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorPrimaryDarkTransparent"
                        android:paddingTop="14dp"
                        android:paddingBottom="20dp"
                        android:text="30"
                        android:textAlignment="center"
                        android:textColor="@color/colorWhite"
                        android:textSize="32sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="33"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/playerAssists"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="14dp"
                        android:background="@color/colorPrimaryDarkTransparent"
                        android:paddingTop="@dimen/default_gap"
                        android:text="@string/playerCard_Assists"
                        android:textAlignment="center"
                        android:textColor="@color/colorWhite"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/assistsTextView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorPrimaryDarkTransparent"
                        android:paddingTop="14dp"
                        android:paddingBottom="20dp"
                        android:text="53"
                        android:textAlignment="center"
                        android:textColor="@color/colorWhite"
                        android:textSize="32sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="33"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/playerPoints"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="14dp"
                        android:background="@color/colorPrimaryDarkTransparent"
                        android:paddingTop="@dimen/default_gap"
                        android:text="@string/playerCard_points"
                        android:textAlignment="center"
                        android:textColor="@color/colorWhite"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/pointsTextView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorPrimaryDarkTransparent"
                        android:paddingTop="14dp"
                        android:paddingBottom="20dp"
                        android:text="83"
                        android:textAlignment="center"
                        android:textColor="@color/colorWhite"
                        android:textSize="32sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="33"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/playerGamesTextView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="14dp"
                        android:background="@color/colorPrimaryDarkTransparent"
                        android:paddingTop="@dimen/default_gap"
                        android:text="@string/playerCard_games"
                        android:textAlignment="center"
                        android:textColor="@color/colorWhite"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/gamesTextView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorPrimaryDarkTransparent"
                        android:paddingTop="14dp"
                        android:paddingBottom="20dp"
                        android:text="108"
                        android:textAlignment="center"
                        android:textColor="@color/colorWhite"
                        android:textSize="32sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="33"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/playerPlusMinusTextView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="14dp"
                        android:background="@color/colorPrimaryDarkTransparent"
                        android:paddingTop="@dimen/default_gap"
                        android:text="@string/playerCard_plus_minus"
                        android:textAlignment="center"
                        android:textColor="@color/colorWhite"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/plusMinusTextView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorPrimaryDarkTransparent"
                        android:paddingTop="14dp"
                        android:paddingBottom="20dp"
                        android:text="+35"
                        android:textAlignment="center"
                        android:textColor="@color/colorWhite"
                        android:textSize="32sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="33"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/playerPointsPerGamneTextView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="14dp"
                        android:background="@color/colorPrimaryDarkTransparent"
                        android:paddingTop="@dimen/default_gap"
                        android:text="@string/playerCard_p_o"
                        android:textAlignment="center"
                        android:textColor="@color/colorWhite"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/pointsPerGameTextView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorPrimaryDarkTransparent"
                        android:paddingTop="14dp"
                        android:paddingBottom="20dp"
                        android:text="2"
                        android:textAlignment="center"
                        android:textColor="@color/colorWhite"
                        android:textSize="32sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="33"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/playerPenaltyGoalsTextView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="14dp"
                        android:background="@color/colorPrimaryDarkTransparent"
                        android:paddingTop="@dimen/default_gap"
                        android:text="@string/playerCard_penalty_shot"
                        android:textAlignment="center"
                        android:textColor="@color/colorWhite"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/penaltyGoalsTextView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorPrimaryDarkTransparent"
                        android:paddingTop="14dp"
                        android:paddingBottom="20dp"
                        android:text="5"
                        android:textAlignment="center"
                        android:textColor="@color/colorWhite"
                        android:textSize="32sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="33"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/playerPlusMinusTextView2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="14dp"
                        android:background="@color/colorPrimaryDarkTransparent"
                        android:paddingTop="@dimen/default_gap"
                        android:text="Peliaika:"
                        android:textAlignment="center"
                        android:textColor="@color/colorWhite"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/plusMinusTextView2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorPrimaryDarkTransparent"
                        android:paddingTop="14dp"
                        android:paddingBottom="20dp"
                        android:text="24"
                        android:textAlignment="center"
                        android:textColor="@color/colorWhite"
                        android:textSize="32sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="33"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/playerPointsPerGamneTextView2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="14dp"
                        android:background="@color/colorPrimaryDarkTransparent"
                        android:paddingTop="@dimen/default_gap"
                        android:text=":"
                        android:textAlignment="center"
                        android:textColor="@color/colorWhite"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/pointsPerGameTextView2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorPrimaryDarkTransparent"
                        android:paddingTop="14dp"
                        android:paddingBottom="20dp"
                        android:text="8"
                        android:textAlignment="center"
                        android:textColor="@color/colorWhite"
                        android:textSize="32sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </TableRow>

        </TableLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>
